<script>
  const ctx = document.getElementById('mychart').getContext('2d');

  const data = {
    labels: ['Orders', 'Products', 'Customers'],
    datasets: [{
      label: 'count',
      data: [{{allorders}}, {{allProducts}}, {{allcustomers}}],
      backgroundColor: [
        'rgb(255, 99, 132)',
        'rgb(54, 162, 235)',
        'rgb(255, 205, 86)'
      ],
      hoverOffset: 4
    }]
  };

  const config = {
    type: 'doughnut', // You can change to 'bar', 'line', etc.
    data: data,
    options: {
      responsive: true
    }
  };

  const myChart = new Chart(ctx, config);
</script>