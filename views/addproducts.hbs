
<style>
  /* ====== Base Container ====== */


  .addproduct{
    padding: 20px;
   
    background-color: darkslategrey;
    color: aliceblue;

  }
.container {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  max-width: 1200px;
  margin: 20px auto;
  padding: 20px;
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 4px 15px rgba(0,0,0,0.08);
  font-family: Arial, sans-serif;
  color: #333;
}

/* ====== Left (Product Info) ====== */
.rightside {
  flex: 2 1 600px;
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.rightside h2 {
  margin-bottom: 5px;
  font-size: 22px;
  font-weight: bold;
}

.rightside span {
  font-size: 14px;
  color: #666;
}

/* Labels & Inputs */
label {
  display: flex;
  flex-direction: column;
  font-size: 14px;
  font-weight: 600;
  color: #444;
  gap: 5px;
}

input,
textarea,
select {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 8px;
  font-size: 14px;
  width: 100%;
  resize: vertical;
  transition: border 0.2s;
}

textarea {
  min-height: 80px;
}

input:focus,
textarea:focus,
select:focus {
  border-color: #007bff;
  outline: none;
}

/* Section headers */
h5 {
  margin: 15px 0 5px;
  font-size: 16px;
  font-weight: 700;
  color: #222;
}

/* ====== Right (Organize Options) ====== */
.leftside {
  flex: 1 1 300px;
  display: flex;
  flex-direction: column;
  gap: 15px;
  padding: 15px;
  border-left: 2px solid #f0f0f0;
}

/* Button group */
.btn-group {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-bottom: 15px;
}

.btn-group button {
  padding: 10px 14px;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease-in-out;
}

.btn-group button[type="reset"] {
  background: #f5f5f5;
  color: #444;
}

.btn-group button[type="reset"]:hover {
  background: #e0e0e0;
}

.btn-group button[type="button"] {
  background: #ffc107;
  color: #fff;
}

.btn-group button[type="button"]:hover {
  background: #e0a800;
}

.btn-group button[type="submit"] {
  background: #007bff;
  color: #fff;
}

.btn-group button[type="submit"]:hover {
  background: #0056b3;
}



/* ====== Responsive Design ====== */
@media (max-width: 1024px) {
  .container {
    flex-direction: column;
  }
  
  .leftside {
    border-left: none;
    border-top: 2px solid #f0f0f0;
    padding-top: 20px;
  }
}

@media (max-width: 768px) {
  .container {
    padding: 15px;
  }

  .btn-group {
    flex-direction: column;
    gap: 8px;
  }

  .btn-group button {
    width: 100%;
  }
}

@media (max-width: 480px) {
  .rightside h2 {
    font-size: 18px;
  }

  input,
  textarea,
  select {
    font-size: 13px;
    padding: 8px;
  }

  .btn-group button {
    font-size: 13px;
    padding: 9px;
  }
}
</style>

  {{>headers}}
  <section id="content">
 <div class="addproduct">
  
  <form action="/admin/addproductpost" method="POST" enctype="multipart/form-data" id="myform">
    <div class="container">
     

      <!-- LEFT SECTION (Product Info) -->
      <div class="rightside">
        <h2>Add a Product</h2>
        <span>Orders placed across your store</span>

        <label>Product Title
          <input type="text" name="title" required>
        </label>

        <label>Product Description</label>
        <textarea  name="description"></textarea>

        <label>Display Images
          <input type="file" name="images" multiple>
        </label>

        <h5>Pricing</h5>
        <label>Regular Price
          <input type="number" name="regularprice" required id="regularprice" oninput="calculateSalePrice()" style="color: black;">
        </label>
        <label for="Discount">
          <input type="number" name="Discount%" id="Discount" placeholder="Discount%" oninput="calculateSalePrice()" style="color: black;">

        </label>
        <label>Sale Price
          <input type="number" name="saleprice" id="salePrice" readonly style="color: black;">
        </label>

       <h5>stockstatus</h5>
        <select name="stockstatus">
          <option value="avaliable">available</option>
          <option value="outofstock">outofstock</option>

          
        </select>

        <label >CreatedAt
          <input type="date"  name="createdat">
        </label>
        
        <label >ExpireDateofProduct
          <input type="date" name="expiredateofproduct">
        </label>

      </div>

      

      <!-- RIGHT SECTION (Organize Options) -->
      <div class="leftside">
        <div class="btn-group">
          <button type="reset">Discard</button>
          <button type="button">Save Draft</button>
          <button type="submit">Publish Product</button>
        </div>

        <h5>Category</h5>
        {{!-- <a href="#">Add new category</a> --}}
        <select name="category">
          <option value="food">food</option>
          <option value="grocery">grocery</option>
          <option value="ecommerce">ecommerce</option>
        </select>

{{!--         
        <a href="#">Add new Vendor</a> --}}
         <label for="Vendor">Vendor
          <input type="text" name="vendor"placeholder="Vendor">

         </label>

        <h5>Collection</h5>
        {{!-- <a href="#">Add new collection</a> --}}
        <input type="text" name="collection">

        <h5>Tags</h5>
        {{!-- <a href="#">View all Tags</a> --}}
        <select name="tags">
          <option value="men">Men's Clothing</option>
          <option value="women">Women's Clothing</option>
          <option value="kids">Kid's Clothing</option>
        </select>

        
       
      </div>
    </div>
  </form>
  </section>
  <script>
    const switchMode = document.getElementById('content');

switchMode.addEventListener('change', function () {
    if (this.checked) {
        document.body.classList.add('dark');
    } else {
        document.body.classList.remove('dark');
    }
})
  </script>


  {{>footer}}



  <script>
    function calculateSalePrice(){
      let RegularPrice=parseFloat(document.getElementById("regularprice").value) || 0
     
      let discount=parseFloat(document.getElementById("Discount").value) || 0
     

      let saleprice=RegularPrice-(RegularPrice*discount /100)
      document.getElementById("salePrice").value=saleprice.toFixed(2)


    }
    




  </script>

