  {{>headers}}

  <div class="container">
    <div class="img">
      <img src=/{{update.images.[0]}} alt="Product Image" style="width: 100%;">
    </div>

    <div class="frm">
      <form action="/admin/postupdateproduct/{{update._id}}" method="POST" enctype="multipart/form-data">
        
        <label>Product Name
          <input type="text" name="title" value="{{update.title}}" required>
        </label>

        <label>Description
          <input type="text" name="description" value="{{update.description}}" required>
        </label>

        <label>Upload Image
          <input type="file" name="images" multiple>
        </label>

        <h4>Pricing</h4>

        <label>Regular Price
          <input type="number" name="regularprice" value="{{update.regularprice}}" id="regularprice" required  oninput="CalculateSalesPrice()">
        </label>

        <label>Discount
          <input type="number" name="discount" value="{{update.discount}}" id="discount"  oninput="CalculateSalesPrice()">
        </label>

        <label>Sale Price
          <input type="number" name="saleprice" value="{{update.saleprice}}"  id="saleprice" oninput="CalculateSalesPrice()">
        </label>

        <label>Stock Status
          <select name="stockstatus">
            <option value="avaliable" >avaliable</option>
            <option value="outofstock" >outofStock</option>
          </select>
        </label>

        <label>Expire Date
          <input type="date" name="expiredateofproduct" value="{{formatDate update.expiredateofproduct}}">
        </label>

        <label>Category
          <select name="category">
            <option value="Women's Clothing" >Women's Clothing</option>
            <option value="kid's Clothing"> </option>
            <option value="men's Clothing" >Men's Clothing</option>
          </select>
        </label>

        <label>Vendor
          <input type="text" name="vendor" value="{{update.vendor}}">
        </label>

        <label>Collection
          <input type="text" name="collection" value="{{update.collection}}">
        </label>

        <label>Tags
          <select name="tags">
            <option value="Women's Clothing" >Women's Clothing</option>
            <option value="kid's Clothing" >Kid's Clothing</option>
            <option valu="men's Clohthing">men's Clohthing</option>
          </select>
        </label>

        <button type="submit">Update Product</button>
      </form>
    </div>
  <div>
    
    <a href="/admin/seeallimages/{{update._id}}">Seeallimages</a>
   
  </div>
  </div>





<script>


    function CalculateSalesPrice(){
        let RegularPrice=parseFloat(document.getElementById("regularprice").value)|| 0
        let discount=parseFloat(document.getElementById("discount").value)|| 0


        let salePrice=(RegularPrice-(RegularPrice*discount/100)).toFixed()
        document.getElementById("saleprice").value=salePrice

    }





</script>


