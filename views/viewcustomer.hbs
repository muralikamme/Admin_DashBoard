{{>headers}}

<section id="content">
<div class="row justify-content-center">
    <!-- User Details Section -->
    <div class="col-md-5">
        <div class="card p-4 shadow-sm">
            <div class="text-center mb-3">
                <img src="" alt="User Profile" class="img-fluid rounded-circle" style="width: 150px; height: 150px;">
            </div>
            <h4 class="text-center"></h4>
            <p><strong>Email:</strong> {{singleuser.name}}</p>
            <p><strong>Phone:</strong> {{singleuser.phone}}</p>
            <p><strong>Role:</strong> {{singleuser.role}}</p>
            <p><strong>Status:</strong> {{singleuser.status}}</p>
        </div>
    </div>
</div>

</section>