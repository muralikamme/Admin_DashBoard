{{>headers}}


<style>
  .product{
    padding: 20px;
    background-color: darkslategrey;
    color: aliceblue;
  }
</style>
<section id="content">
<div class="product">
  
  <table id="example21">
    <thead>
      <tr>
        <th>#</th>
        <th>Image</th>
        <th>Product Name</th>
        <th>Description</th>
        <th>Regular Price</th>
        <th>Sale Price</th>
        <th>Category</th>
        <th>Vendor</th>
        <th>Created At</th>
        <th>Stock Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr>
        <td>{{inc @index}}</td>
        <td><img src="/{{this.images.[0]}}" style="height: 80px; width:80px;" alt=""></td>
        <td>{{this.title}}</td>
        <td>{{this.description}}</td>
        <td>{{this.regularprice}}</td>
        <td>{{this.saleprice}}</td>
       <td>
  {{#if this.category}}
    {{this.category.name}}
  {{else}}
    Missing
  {{/if}}
</td>
        <td>{{this.vendor}}</td>
     
        <td>{{this.createdAt}}</td>
        <td>{{this.stockstatus}}</td>
        <td>
            <div>
                <a href="/admin/viewproduct/{{this._id}}">
                    <i class="fa-solid fa-eye"></i>

                </a>
                <a href="/admin/getupdateproduct/{{this._id}}">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <form action="/admin/deleteproduct/{{this._id}}" method="POST">
                <button type="submit">
                    <i class="fa-solid fa-trash"></i>
                    </button>
               
                </form>

            </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
</section>

{{>footer}}
