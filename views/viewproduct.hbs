
   {{>headers}}

<section id="content" class="container my-4">
  <div class="row g-4">
    {{#each viewproduct}}
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
          <img src="/{{this.images.[0]}}" 
               class="card-img-top img-fluid" 
               alt="{{this.title}}" 
               style="height: 200px; object-fit: cover;">

          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><strong>Title:</strong> {{this.title}}</h5>
            <p class="card-text mb-1"><strong>Category:</strong> {{this.category}}</p>
            <p class="card-text small text-muted flex-grow-1">{{this.description}}</p>
            <p class="card-text mb-1"><strong>Regular Price:</strong> ₹{{this.regularprice}}</p>
            <p class="card-text mb-1 text-success"><strong>Sale Price:</strong> ₹{{this.saleprice}}</p>
            <p class="card-text"><strong>Vendor:</strong> {{this.vendor}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</section>

