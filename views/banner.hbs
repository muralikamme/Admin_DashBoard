<script>
    const updateButton = document.getElementById("updateButton");

    document.addEventListener("DOMContentLoaded", function () {
    const validFileTypes = ["image/jpeg", "image/png", "image/jpg"];
    const maxWidth = 1024;
    const maxHeight = 500;

    function validateImage(input, errorElement, submitButton) {
        const file = input.files[0];
        if (!file) {
            errorElement.style.display = "none";
            submitButton.disabled = true;
            return;
        }
        if (file.size > 2 * 1024 * 1024) {
           errorElement.style.display = 'block';
           errorElement.textContent = 'File size must not exceed 2 MB.';
           input.value = "";
           submitButton.disabled=true;
           return;
        }
        if (!validFileTypes.includes(file.type)) {
            errorElement.textContent = "Invalid file type. Please upload a .jpg, .jpeg, or .png image.";
            errorElement.style.display = "block";
            input.value = "";
            submitButton.disabled = true;
            return;
        }

        const img = new Image();
        img.onload = function () {
            if (Math.abs(img.width*3 - img.height*4) >=4) {
                errorElement.textContent = `image dimensions must be 4:3 eg(${1200}x${900}).`;
                errorElement.style.display = "block";
                input.value = "";
                submitButton.disabled = true;
            } else {
                errorElement.style.display = "none";
                submitButton.disabled = false;
            }
        };

        img.onerror = function () {
            errorElement.textContent = "Invalid image file.";
            errorElement.style.display = "block";
            input.value = "";
            submitButton.disabled = true;
        };

        img.src = URL.createObjectURL(file);
    }

    // Validate Add Banner Form
    const bannerPictureInput = document.getElementById("bannerPicture");
    const errorMessageAdd = document.getElementById("error-message");
    const addButton = document.getElementById("addButton");

    if (bannerPictureInput) {
        bannerPictureInput.addEventListener("change", function () {
            validateImage(bannerPictureInput, errorMessageAdd, addButton);
        });
    }

    // Validate Update Banner Form
    const updateBannerPictureInput = document.querySelector("#updateModal input[name='bannerPicture']");
    const errorMessageUpdate = document.getElementById("imageError");

    if (updateBannerPictureInput) {
        updateBannerPictureInput.addEventListener("change", function () {
            validateImage(updateBannerPictureInput, errorMessageUpdate, updateButton);
        });
    }
});
    const updateBannerForm = document.getElementById('updateBannerForm');
    updateBannerForm.addEventListener('submit', ()=>{
